---
interface Props {
  github?: string
  twitter?: string
  email?: string
  rss?: boolean
  class?: string
}

const { github, twitter, email, rss, class: className } = Astro.props
---

<div class={`social-links ${className || ''}`}>
  {
    github && (
      <a
        href={`https://github.com/${github}`}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub"
      >
        <svg viewBox="0 0 24 24" fill="currentColor" class="icon">
          <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.603-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z" />
        </svg>
        <span>GitHub</span>
      </a>
    )
  }

  {
    twitter && (
      <a
        href={`https://x.com/${twitter}`}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Twitter"
      >
        <svg viewBox="0 0 24 24" fill="currentColor" class="icon">
          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
        </svg>
        <span>Twitter</span>
      </a>
    )
  }

  {
    email && (
      <a href={`mailto:${email}`} aria-label="Email">
        <svg
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon"
        >
          <rect width="20" height="16" x="2" y="4" rx="2" />
          <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
        </svg>
        <span>Email</span>
      </a>
    )
  }

  {
    rss && (
      <a href="/rss.xml" target="_blank" aria-label="RSS Feed">
        <svg
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon"
        >
          <path d="M4 11a9 9 0 0 1 9 9" />
          <path d="M4 4a16 16 0 0 1 16 16" />
          <circle cx="5" cy="19" r="1" />
        </svg>
        <span>RSS</span>
      </a>
    )
  }
</div>

<style>
  .social-links {
    display: flex;
    gap: 1.25rem;
  }

  .social-links a {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    text-decoration: none;
    color: var(--text-primary);
    font-size: var(--font-size-s);
    transition: all 0.2s ease-out;
    position: relative;
    padding-bottom: 0.125rem;
    opacity: 1;
  }

  /* 当有链接被 hover 时，其他未被 hover 的链接变淡 */
  .social-links:has(a:hover) a:not(:hover) {
    opacity: 0.3;
  }

  .social-links a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: var(--text-primary);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.2s ease-out;
  }

  .social-links a:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  .icon {
    width: 1rem;
    height: 1rem;
    flex-shrink: 0;
  }

  span {
    font-family: var(--sans);
  }

  @media (max-width: 768px) {
    .social-links {
      gap: 1.25rem;
    }

    .social-links a {
      font-size: 0.875rem;
    }

    .icon {
      width: 0.9375rem;
      height: 0.9375rem;
    }
  }
</style>
